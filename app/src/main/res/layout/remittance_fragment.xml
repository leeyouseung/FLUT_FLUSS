<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.RemittanceFragment"
    tools:ignore="UselessLeaf">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/remittance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="70dp"
            android:text="송금"
            android:textColor="@color/black"
            android:textSize="11pt"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/camera_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/camera_icon"
            android:scaleType="center"
            app:layout_constraintEnd_toStartOf="@+id/notification_button"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/notification_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/notifications_icon"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="8dp"
            android:text="0 원"
            android:textColor="@color/black"
            android:textSize="22pt"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/money_number_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="22dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="13pt"
            app:layout_constraintEnd_toStartOf="@+id/money_number_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/money_number_2"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/money_number_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="8dp"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="13pt"
            app:layout_constraintEnd_toStartOf="@+id/money_number_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/money_number_1"
            app:layout_constraintTop_toBottomOf="@+id/money"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/money_number_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="8dp"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="13pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/money_number_2"
            app:layout_constraintTop_toTopOf="@+id/money_number_2"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/money_number_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="22dp"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="13pt"
            app:layout_constraintEnd_toStartOf="@+id/money_number_5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/money_number_1"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/money_number_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:text="5"
            android:textSize="13pt"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/money_number_6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/money_number_4"
            app:layout_constraintTop_toBottomOf="@+id/money_number_2"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/money_number_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="13pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/money_number_5"
            app:layout_constraintTop_toBottomOf="@+id/money_number_3"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/money_number_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="22dp"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="13pt"
            app:layout_constraintEnd_toStartOf="@+id/money_number_8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/money_number_4"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/money_number_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:text="8"
            android:textSize="13pt"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/money_number_9"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/money_number_7"
            app:layout_constraintTop_toBottomOf="@+id/money_number_5"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/money_number_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="13pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/money_number_8"
            app:layout_constraintTop_toBottomOf="@+id/money_number_6"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/money_number_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:text="0"
            android:textSize="13pt"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/delete_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cancel_button"
            app:layout_constraintTop_toBottomOf="@+id/money_number_8"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="22dp"
            android:text="취소"
            android:textSize="8pt"
            app:layout_constraintEnd_toStartOf="@+id/money_number_0"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/money_number_7"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/money_back_button"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/money_number_0"
            app:layout_constraintTop_toBottomOf="@+id/money_number_9"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

</layout>