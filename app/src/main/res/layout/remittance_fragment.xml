<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.z_fragment.main.RemittanceFragment"
    tools:ignore="UselessLeaf">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bright_gray">

        <Button
            android:id="@+id/money_number_1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:background="@color/transparent"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toStartOf="@+id/money_number_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/money_number_2"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/money_number_2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="8dp"
            android:background="@color/transparent"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toStartOf="@+id/money_number_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/money_number_1"
            app:layout_constraintTop_toBottomOf="@+id/money"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/money_number_3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:background="@color/transparent"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/money_number_2"
            app:layout_constraintTop_toTopOf="@+id/money_number_2"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/money_number_4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="12dp"
            android:background="@color/transparent"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toStartOf="@+id/money_number_5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/money_number_1"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/money_number_5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:background="@color/transparent"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toStartOf="@+id/money_number_6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/money_number_4"
            app:layout_constraintTop_toBottomOf="@+id/money_number_2"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/money_number_6"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:background="@color/transparent"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/money_number_5"
            app:layout_constraintTop_toBottomOf="@+id/money_number_3"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/money_number_7"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="12dp"
            android:background="@color/transparent"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toStartOf="@+id/money_number_8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/money_number_4"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/money_number_8"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:background="@color/transparent"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toStartOf="@+id/money_number_9"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/money_number_7"
            app:layout_constraintTop_toBottomOf="@+id/money_number_5"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/money_number_9"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:background="@color/transparent"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/money_number_8"
            app:layout_constraintTop_toBottomOf="@+id/money_number_6"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/money_number_0"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:background="@color/transparent"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="10pt"
            app:layout_constraintEnd_toStartOf="@+id/delete_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cancel_button"
            app:layout_constraintTop_toBottomOf="@+id/money_number_8"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/cancel_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="12dp"
            android:background="@color/transparent"
            android:text="취소"
            android:textSize="7pt"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/money_number_0"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/money_number_7"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/qr_camera_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/camera_icon"
            android:scaleType="center"
            app:layout_constraintEnd_toStartOf="@+id/notification_button"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/notification_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/notifications_icon"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/money_back_button"
            android:scaleType="centerCrop"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/money_number_0"
            app:layout_constraintTop_toBottomOf="@+id/money_number_9"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/remittance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="50dp"
            android:text="송금"
            android:textColor="@color/black"
            android:textSize="11pt"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="12dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20pt"
            app:layout_constraintEnd_toStartOf="@+id/money_title"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/money_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="150dp"
            android:text="원"
            android:textColor="@color/black"
            android:textSize="19pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

</layout>