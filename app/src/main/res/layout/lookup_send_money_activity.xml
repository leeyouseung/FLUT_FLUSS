<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.lookup.account.remittance.LookupSendMoneyActivity">

    <Button
        android:id="@+id/money_number_1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/transparent"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="10pt"
        app:layout_constraintEnd_toStartOf="@+id/money_number_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/money_number_2"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/money_number_2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/transparent"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="10pt"
        app:layout_constraintEnd_toStartOf="@+id/money_number_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/money_number_1"
        app:layout_constraintTop_toBottomOf="@+id/money_title"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/money_number_3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/transparent"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/money_number_2"
        app:layout_constraintTop_toTopOf="@+id/money_number_2"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/money_number_4"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/transparent"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="10pt"
        app:layout_constraintEnd_toStartOf="@+id/money_number_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/money_number_1"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/money_number_5"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/transparent"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="10pt"
        app:layout_constraintEnd_toStartOf="@+id/money_number_6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/money_number_4"
        app:layout_constraintTop_toBottomOf="@+id/money_number_2"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/money_number_6"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/transparent"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/money_number_5"
        app:layout_constraintTop_toBottomOf="@+id/money_number_3"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/money_number_7"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/transparent"
        android:text="7"
        android:textColor="@color/black"
        android:textSize="10pt"
        app:layout_constraintEnd_toStartOf="@+id/money_number_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/money_number_4"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/money_number_8"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/transparent"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="10pt"
        app:layout_constraintEnd_toStartOf="@+id/money_number_9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/money_number_7"
        app:layout_constraintTop_toBottomOf="@+id/money_number_5"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/money_number_9"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/transparent"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="10pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/money_number_8"
        app:layout_constraintTop_toBottomOf="@+id/money_number_6"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/money_number_0"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/transparent"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="10pt"
        app:layout_constraintEnd_toStartOf="@+id/delete_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cancel_button"
        app:layout_constraintTop_toBottomOf="@+id/money_number_8"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/cancel_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@color/transparent"
        android:text="취소"
        android:textSize="7pt"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/money_number_0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/money_number_7"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/money_back_button"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/money_number_0"
        app:layout_constraintTop_toBottomOf="@+id/money_number_9"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/money_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="12dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20pt"
        app:layout_constraintEnd_toStartOf="@+id/money_title"
        app:layout_constraintTop_toBottomOf="@+id/account_money"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/money_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="150dp"
        android:text="원"
        android:textColor="@color/black"
        android:textSize="19pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/money_title"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/back_button_icon"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/big_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="송금"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="9pt"
        app:layout_constraintBottom_toBottomOf="@+id/back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back_button"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/remittance_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:text="보내기"
        android:textSize="7pt"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/money_send_button_off_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/account_kind_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="플럿머니"
        android:textSize="7pt"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/big_title"
        app:layout_constraintStart_toStartOf="@+id/big_title"
        app:layout_constraintTop_toBottomOf="@+id/big_title"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/account_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="잔액 : 0 원"
        app:layout_constraintEnd_toEndOf="@+id/account_kind_title"
        app:layout_constraintStart_toStartOf="@+id/account_kind_title"
        app:layout_constraintTop_toBottomOf="@+id/account_kind_title"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>